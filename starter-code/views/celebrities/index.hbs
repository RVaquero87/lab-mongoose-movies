<h2>Lista frases</h2>
{{#each celebrity}}

<ul>
  <li>
    <a href="/celebrities/show/{{this._id}}">{{this.name}}</a>
    <form action="/celebrities/{{this.id}}/delete" method="POST">
      <button type="submit">Borrar</button>
    </form>
    <form action="/celebrities/edit/{{this.id}}">
      <button type="submit">editar</button>
    </form>
  </li>
</ul>

{{/each}}

<a href="/celebrities/new">Crear Nuevo</a>